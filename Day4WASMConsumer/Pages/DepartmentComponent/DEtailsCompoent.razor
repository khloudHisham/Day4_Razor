@page "/Depts/Details/{id:int}"

<h3>DEtailsCompoent</h3>
@if (DepObj != null)
{
    <h3>@DepObj.Name</h3>
    <h2>@DepObj.Description</h2>
    <h2>@DepObj.Location</h2>
    <h2>@DepObj.Manager</h2>
    <h2>@DepObj.Student</h2>
}else{
    <h2>Id Invalid or Wait ..</h2>
}
@code {
    [Parameter]
    public int id { get; set; }

    [Inject]
    public IServices<Department> DeptService { get; set; }

    public Department DepObj { get; set; }

    protected override async Task OnInitializedAsync()
    {
        DepObj = await DeptService.GetByID(id);
        base.OnInitializedAsync();
    }
}
